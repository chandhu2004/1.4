#include <stdio.h>
#include <string.h>

// Function to check if str2 is a substring of str1
int isSubstring(const char *str1, const char *str2) {
    int len1 = strlen(str1);
    int len2 = strlen(str2);

    // Iterate through str1 to find str2
    for (int i = 0; i <= len1 - len2; i++) {
        int j;
        for (j = 0; j < len2; j++) {
            if (str1[i + j] != str2[j]) {
                break;
            }
        }
        if (j == len2) {
            return 1; // str2 is a substring of str1
        }
    }
    return 0; // str2 is not a substring of str1
}

int main() {
    char str1[100], str2[100];
    printf("Enter string 1: ");
    scanf("%s", str1);
    printf("Enter string 2: ");
    scanf("%s", str2);

    if (isSubstring(str1, str2)) {
        printf("'%s' is a substring of '%s'\n", str2, str1);
    } else {
        printf("'%s' is not a substring of '%s'\n", str2, str1);
    }
    return 0;
}
